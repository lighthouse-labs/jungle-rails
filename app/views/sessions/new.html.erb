<h1>Login</h1>

<%= form_tag(session_path, class: 'form-group') do %>

  <div class="form-group">
    <%= label_tag 'email' %>
    <%= text_field_tag 'email', nil, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag 'password' %>
    <%= password_field_tag 'password', nil, class: 'form-control' %>
  </div>

<%= submit_tag 'Login' %>
<% end %>