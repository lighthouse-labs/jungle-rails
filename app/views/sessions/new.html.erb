<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="form-group">
    <div>
      Email:
    </div>
    <%= text_field_tag :email %>
  </div>

  <div class="form-group">
    <div>
      Password:
    </div>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Submit", class: "btn btn-info"%>

<% end %>