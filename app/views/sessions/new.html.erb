<h1>Sign in!</h1>

<%= form_for :session, url: session_path do |f| %>
    <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.text_field :password, class: 'form-control' %>
    </div>

    <%= f.submit "Sign-In" %>
<% end %>

      