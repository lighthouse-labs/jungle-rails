<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Customer Rating<dt>

          <% rate = 0.0
            @product.reviews.each do |r|
              rate += r.rating
            end
            avg_rate = rate / @product.reviews.length %>

          <dd><%= avg_rate.round(1).to_f.nan? ? "No ratings yet" : avg_rate.round(1) %></dd>
          <dd>
          <div class="reviews">
            <h4>Reviews</h4>
            <% if current_user %>
              <div class="new-review form-group">
                <%= form_for([@product,@review]) do |f| %>
                <%= f.text_field :description, placeholder: "How did you like it?", class: "form-control", style: 'display: inline-block; max-width: 60%;' %>

                <%= f.select :rating, [5, 4, 3, 2, 1], {}, {class: "form-control"} %>

                <%= f.submit :Submit, class: 'btn btn-default submit-review' %>
                <% end %>
              </div>
            <% end %>
            <% @product.reviews.reverse_each do |review| %>
              <%= render review %>
            <% end %>
          </div>
          </dd>
        </dl>
      </div>
    </div>

  </article>

</section>
