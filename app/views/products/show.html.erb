<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>

          <div>
            <dd>Average Rating <%= (number_with_precision @product.reviews.average(:rating), precision: 2) || '0' %>/5 </dd>
          </div>
          <button id="review-form-toggle">Review</button>

        </dl>
      </div>
    </div>

  <div class="row">
    <div class="reviews" id="center">
      <div class="col">
        <!-- only displays form if logged in -->
        <% unless current_user.nil? %>
          <%= render 'form', product: @product %>
        <% end %>
      </div>

      <% @product.reviews.order(created_at: :desc).each do |review| %>
        <%= render 'comments', review: review %>
      <% end %>
    </div>
  </div>

  </article>
</section>
