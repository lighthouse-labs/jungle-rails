<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Overall Rating</dt>
          <dd><%= @product.reviews.average(:rating) || 'N/A'%></dd>
        </dl>
      </div>
    </div>


    <% if current_user  %>
      <div class="row">
        <%= form_for [@product, @product.reviews.new] do |form| %>

          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :rating %>
            <%= form.select :rating, options_for_select(1..5), class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, class: 'form-control' %>
          </div>

          <%= form.submit 'Submit Review', class: 'btn btn-primary' %>
        <% end %>

      </div>
    <% else %>
      <%= link_to "login to creat a review", new_session_path %>
    <% end %>

    <div class="row">

      <h3> Reviews </h2>
      <dl class="dl-horizontal">
      <% @product.reviews.order("created_at desc").each do |review| %>
        <% if review.id %>
          <dt>reviewer:</dt>
          <dd><%= review.user.first_name %></dd>
          <dt>rate:</dt>
          <dd><%= review.rating %></dd>
          <dt>comment:</dt>
          <dd><%= review.description %></dd>
          <dt>date:</dt>
          <dd><%= review.created_at %></dd>

          </ul>
          <% if current_user && current_user.id == review.user.id %>
          <dt></dt>
          <dd><%= link_to "delete", product_review_path(@product, review), :method => :delete, :confirm => "Are you sure?" %></dd>
          <% end %>
        <% end %>
      <% end %>
      </dl>

    </div>

  </article>

</section>

