<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
    <% if current_user %>
      <div class="row">
        <h3>Leave a Review</h3>
        <%= form_for([@product, @review]) do |f| %>
          <div class="form-group">
          <%= label :rating, "Rating:" %> <br />
          <%= f.select :rating, [5, 4, 3, 2, 1] %>
          </div>
          <div class="form-group">
          <%= label :description, "Description:" %> <br />
          <%= f.text_area :description, size: "80x6" %>
          </div>
          <%= f.submit "Create" %>
        <% end %>
      </div>
    <% end %>

    <div class="row">
      <h3>Reviews</h3>

      <% reviews = Review.where(product_id: @product.id) %>
        <% reviews.reverse.each do |review| %>
          <div class="well">
            <h2><%= review.rating %> / 5</h2>
            <h4><%= review.description %></h4>
            <% if current_user.id ==  review.user_id %>
              <h5 class="text-right"><%= link_to 'Delete', product_review_path(@product, review),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %>
              </h5>
            <% end %>
          </div>
        <% end %>
    </div>

  </article>

</section>