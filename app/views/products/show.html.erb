  <section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>

        </dl>
      </div>
    </div>
    <div class="col-sm-12">
      <dl class="dl-horizontal">
        <% if (@product.ratings.to_a.length > 0) %>
        <% sorted = @product.ratings.to_a.reverse %>
        <% sorted.each do |rating| %>
       <%= render 'rating', rating:rating %>
        <% end %>
        <% end %>



       <% if current_user %>
       <div class='add-rating'>
          <%= form_for [@product, @rating] do |f| %>
          <%= f.number_field(:rating, in: 1..5, step: 1) %>
          <%= f.text_area :content %>
          <%= f.submit %>
          <% end %>
      </div>
    <% end %>
    </dl>
    </div>
  </article>

</section>
