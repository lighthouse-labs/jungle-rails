<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>

        <% if current_user%>
        <% @review = Review.new() %>
        <%= form_for [@product, @review]  do |f| %>
          <dt>Description:<%= f.text_area :description %><br /></dt>
          <dt>Rating: <%= f.select :rating, [1,2,3,4,5] %></dt><br />
          Submit : <%= f.submit "Post Comment" %><br />
        <% end %>
        <% end %>

        <dl class="dl-horizontal">
          <% @product.reviews.reverse_order.each do |review|%>
            <dt>UserID</dt>
            <dd><%= review.user_id %></dd>
            <dt>Description</dt>
            <dd><%= review.description %></dd>
            <dt>Rating</dt>
            <dd><%= review.rating %></dd>
            <% if current_user.id == review.user_id%>
            <dd><%= link_to 'Destroy',  product_review_path(@product.id, review.id),  method: :delete %></dd>
            <% end %>
            <br/>
          <%end%>

        </dl>





      </div>


    </div>

  </article>

</section>
