<table class="table">
    <thead>
      <tr>
        <th>Rating</th>
        <th>Description</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      <% review.each do |i| %>
      <tr>
        <td><%=i.rating %>/5</td>
        <td><%=i.description %></td>
        <% if current_user && i.user_id == current_user.id %>
        <td><%= link_to fa_icon('trash'), [@product, i], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %><td>
  <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
