
<article class="review">
  <dl class="dl-horizontal">
    <dt><%= review.user_id %>
    <br>Rating: <%= review.rating %>/5
    <br><%= time_ago_in_words(review.created_at) %> ago
    </dt>
    <dd><%= review.description %></dd>
    
    <% if (current_user.first_name == review.user.first_name) %>
    <dt>Delete</dt>
    <dd><%= link_to fa_icon('trash'), product_review_path(review.product_id, review.id), method: :delete %></dd>
    <% end %>

  </dl>
</article>
