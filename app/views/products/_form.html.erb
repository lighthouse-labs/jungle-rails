<div>
  <%= form_for [@product, Review.new] do |form|%>
  <!-- generate error if it exists -->
    <% if flash[:error] %>
      <div class="alert alert-danger">
        <strong>Error!</strong>
        <ul>
        <% flash[:error].each do |msg| %>
         <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating%>
  </div>
  <div class="form-group">
    <%= form.label :What_do_you_want_to_say? %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <%= form.submit 'Create Product', class: 'btn btn-primary' %>
  <% end %>
</div>