<div id="product-review">

  <%= form_for [@product, Review.new] do |form|%>
  <!-- generate error if it exists -->
    <% if flash[:comment_error] %>

      <div class="alert alert-danger">
        <strong>Error!</strong>
        <ul>
        <% flash[:comment_error].each do |msg| %>
         <li><%= msg %></li>
        <% end %>
        </ul>
      </div>

    <% end %>

    <div class="form-group">
      <%= form.label :Rating %>
      <%= form.select :rating, [[1],[2],[3],[4],[5]], class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :What_do_you_want_to_say? %>
      <%= form.text_area :description, class: 'form-control', rows: 3,
      maxlength: 255 %>
    </div>

    <%= form.submit 'Review', class: 'btn btn-primary' %>
  <% end %>

</div>