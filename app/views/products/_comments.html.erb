<% user = User.find_by({id: review.user_id}) %>

<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
    <strong> <%= user.first_name %> <%= user.last_name %> </strong>
    <span class="text pull-right"> rated <%= review.rating %>/5 </span>
    </div>
    <div class="panel-body">
      <%= review.description %>
    <h6 class="text-muted"><%= time_ago_in_words review.created_at%> ago..</h6>
    </div><!-- /panel-body -->
  </div><!-- /panel panel-default -->
</div><!-- /col-sm-5 -->
