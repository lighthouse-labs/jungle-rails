  <header class="page-header">
  </header>
  </body>
    <h1>Order #<%= @order.id %></h1>

    <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>

        <tbody>
          <% @total_cost = 0 %>
                   <% @order.line_items.each do |line_item| %>
                          <%= render 'orders/item', line_item: line_item %>
          <% end %>
        </tbody>

        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= @total_cost %>
            </th>
          </tr>
          <tr>
            <th colspan="4">
              EMAIL:
            </th>
            <th>
              <%= @order.email %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
    </body >
