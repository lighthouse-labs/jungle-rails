</div>
    <h1 value="Sign in"/>
      <%= form_for [:user, url] do |form| %>

        <div class="form-group">
          <%= form.label :"Fist Name" %>
          <%= form.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :"Last Name" %>
          <%= form.text_area :last_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :"Email" %>
          <%= form.select :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :"Password" %>
          <%= form.number_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :"Password Confirmation" %>
          <%= form.text_field :password_confirmation, class: 'form-control' %>
        </div>

        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      <% end %>
</div>