<section class="admin-products-new">

  <header class="page-header">
    <h1>Register Your Account</h1>
  </header>


  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for :user, url: '/users' do |user| %>
        <div class="form-group">
          <div>Your First Name:</div>
           <%= user.text_field :first_name %>
        </div>

        <div class="form-group">
          <div>Your Last Name:</div>
          <%= user.text_field :last_name %>
        </div>

        <div class="form-group">
          <div> Your Email:</div> <%= user.text_field :email %>
        </div>

        <div class="form-group">
          <div>Your Password:</div> <%= user.password_field :password %>
        </div>

        <div class="form-group">
          <div>Confirm Your Password: </div> <%= user.password_field :password_confirmation %>
        </div>
        <%= user.submit 'Submit', class: 'btn btn-info' %>
        <!-- class: 'btn btn-info' -->
      <% end %>
    </div>
  </div>

</section>
