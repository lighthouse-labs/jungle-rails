<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <% if user %>
      Login as <%= user.email %> | <%= link_to 'Logout', '/logout' %>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Sign in', '/signin' %>
    <% end %>
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
