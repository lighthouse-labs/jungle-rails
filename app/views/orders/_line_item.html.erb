<% product = Product.find(line_item.product_id) %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      $<%= product.price %>
    </td>
    <td>
      <%= line_item.quantity %>
    </td>
    <td>
      $<%= line_item.total_price %>
    </td>
    </br>
  </tr>