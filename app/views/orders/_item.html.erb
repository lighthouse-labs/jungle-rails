  <thead>
    <tr>
      <th>#</th>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <% counter = 0 %>
  <% line_items.each do |item|  %>
    <% counter += 1 %>
  <tbody>
    <tr>
      <th scope="row"> <%= counter %> </th>
      <td>
        <%= image_tag item.product.image.tiny %>
      </td>
      <td>
        <h4>
           <%= item.product.name %>
        </h4>
        <br>
        <p> <%= item.product.description %></p>
        <p> Quantity: <%= item.quantity %></p>
      </td>
    <% end%>
      <td>
       Total Items: <%= line_items.count %>
      </td>
      <td>
        Total Sale: <%= @order.total_cents %>
      </td>
      <td>
        Email: <%= @order.email %>
      </td>
    </tr>
  </tbody>