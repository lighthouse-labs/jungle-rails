<article class="item">
  <% @product=Product.find(product_id) %>
  <% item_total = @product.price * quantity %>
  <% @total += item_total %>
  <tr>
    <td>
      <%= image_tag @product.image.tiny %>
    </td>
    <td>
      <h4><%= @product.name %></h4>
      <br>
      <p><%= @product.description %></p>
    </td>
    <td>
      <%= @product.price %>
    </td>
    <td>
      <%= quantity %>
    </td>
    <td>
      <%= item_total %>
    </td>

  </tr>
</article>
