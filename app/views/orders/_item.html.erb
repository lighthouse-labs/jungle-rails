<% if product = Product.find_by(id: product_id) %>
 <% item_total = product.price * quantity.to_i %>
<% @order_total += item_total %>

  <tr>
   <td>
     <%= image_tag product.image.tiny %>
   </td>
   <td>
     <h4><%= product.name %></h4>
     <br>
     <p><%= product.description %></p>
   </td>
   <td>
     <%= product.price %>
   </td>
   <td>
     <%= quantity.to_i %>
   </td>
   <td>
     <%= item_total %>
   </td>
  </tr>

 <% end %>
