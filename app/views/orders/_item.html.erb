<% quantity = details %>

<% if product = Product.find_by(id: product_id) %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= quantity %>
    </td>
    <td>
      <%= quantity * product.price %>
    </td>
  </tr>

<% end %>
