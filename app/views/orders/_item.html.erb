<% if product = Product.find_by(id: item.product_id) %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= ('%.2f' % (item.total_price_cents.to_i/100.00)) %>
    </td>
  </tr>
<% end %>
