<% if product = Product.find(product_id) %>
  <% item_total = product.price * quantity %>

  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= product.category.name %>
    </td>
    <td>
      <%= item_total %>
    </td>
    <td>
      <%= product.quantity %>
    </td>
  </tr>
<% end %>