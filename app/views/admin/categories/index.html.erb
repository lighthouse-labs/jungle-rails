<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Category</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Category</th>
        </tr>
      </thead>
      <tbody>
        <% Category.all.each do |category| %>
          <tr><td><%= link_to category.name, category %><td></tr>
        <% end %>
      </tbody>
    </table>

  </div>

</section>
